<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.actionSets">
      <actionSet
            label="Sample Action Set"
            visible="true"
            id="com.thinkgem.jeesite.autocode.actionSet">
         <menu
               label="JEESITE"
               id="sampleMenu">
            <separator
                  name="sampleGroup">
            </separator>
         </menu>
         <action
               class="com.thinkgem.jeesite.autocode.actions.AboutAction"
               icon="icons/about.png"
               id="com.thinkgem.jeesite.autocode.actions.AboutAction"
               label="关于代码生成器"
               menubarPath="sampleMenu/sampleGroup">
         </action>
         <action
               class="com.thinkgem.jeesite.autocode.actions.TreeModAction"
               icon="icons/tree.png"
               id="com.thinkgem.jeesite.autocode.actions.TreeModAction"
               label="树状结构生成"
               menubarPath="sampleMenu/sampleGroup"
               style="push"
               toolbarPath="sampleGroup">
         </action>
         <action
               label="增删改查模块生成"
               icon="icons/curd.png"
               class="com.thinkgem.jeesite.autocode.actions.CrudModAction"
               tooltip="增删改查模块"
               menubarPath="sampleMenu/sampleGroup"
               toolbarPath="sampleGroup"
               id="com.thinkgem.jeesite.autocode.actions.CrudModAction">
         </action>
         <action
               class="com.thinkgem.jeesite.autocode.actions.DataSourceAction"
               icon="icons/database.png"
               id="com.thinkgem.jeesite.autocode.actions.DataSourceAction"
               label="数据源管理"
               menubarPath="sampleMenu/sampleGroup"
               toolbarPath="sampleGroup"
               tooltip="数据源管理">
         </action>
      </actionSet>
   </extension>

</plugin>
